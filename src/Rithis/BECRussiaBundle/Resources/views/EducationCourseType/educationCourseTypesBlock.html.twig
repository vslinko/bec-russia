{% if types|length > 0 %}
    <section class="education-course-types" data-element="education-course-types">
        <ul class="education-course-types-menu">
            {% for type in types %}
                <li data-element="education-course-types-menu-item">
                    <a href="#">{{ type.title }}
                        <small>{{ type.note }}</small>
                    </a>
                </li>
            {% endfor %}
        </ul>

        <ul class="education-course-types-images">
            {% for type in types %}
                <li data-element="education-course-types-image">
                    {% thumbnail type.image, "big" %}
                </li>
            {% endfor %}
        </ul>
    </section>
{% endif %}
