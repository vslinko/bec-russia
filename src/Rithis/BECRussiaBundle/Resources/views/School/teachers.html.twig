{% extends "RithisBECRussiaBundle::school.html.twig" %}

{% block school_content %}
    <div class="title">Преподаватели<br><img src="{{ asset("bundles/rithisbecrussia/pict/1x1.gif") }}" alt="" border="0" width="10" height="10"><br></div><br>

    {% for teacher in school.teachers %}
        <div style="float: left; margin: 0 10px 10px 0">
            {% thumbnail teacher.image, "medium" %}
        </div>

        <h3>{{ teacher.name }}</h3>
        {{ teacher.description|raw }}
        <br>
    {% endfor %}
{% endblock %}
