{% extends "RithisBECRussiaBundle::base.html.twig" %}

{% block content %}
    <section class="article list">
        <header>
            <h1>Вакансии</h1>
        </header>

        {% for vacancy in vacancies %}
            <article>
                <header>
                    <h2>
                        <a href="{{ path("rithis_becrussia_vacancy_get", {slug: vacancy.slug}) }}">{{ vacancy.title }}</a>
                    </h2>
                </header>

                <blockquote>{{ vacancy.annotation }}</blockquote>
            </article>
        {% endfor %}
    </section>
{% endblock %}
