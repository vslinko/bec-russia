{% if poll %}
<form action="{{ path("rithis_becrussia_poll_postresults", {id: poll.id}) }}" method="post">
<table width="100%" cellspacing="0" cellpadding="0" border="0">
    <tr>
        <td><img src="{{ asset("bundles/rithisbecrussia/pict/1x1.gif") }}" alt="" border="0" width="5" height="10"><br></td>
        <td width="100%">
            <div class="title">Опрос<br><img src="{{ asset("bundles/rithisbecrussia/pict/1x1.gif") }}" alt="" border="0" width="10" height="10"><br></div><br>
            <div class="vote_text">
                {{ poll.question }}

                {% if already_answered %}
                    <ul>
                    {% for answer in poll.answers %}
                        <li>{{ answer.answer }} ({{ answer.count }})</li>
                    {% endfor %}
                    </ul>
                {% else %}
                    {% for answer in poll.answers %}
                        <input type="radio" name="answer" value="{{ answer.id }}" >{{ answer.answer }}<br>
                    {% endfor %}
                {% endif %}
            </div>
        </td>
    </tr>
</table>
<br>
<table width="100%" cellspacing="0" cellpadding="0" border="0">
    <tr>
        <td><img src="{{ asset("bundles/rithisbecrussia/pict/1x1.gif") }}" alt="" border="0" width="5" height="10"><br></td>
        <td width="50%">{% if not already_answered %}<input type="image" src="{{ asset("bundles/rithisbecrussia/pict/button_vote.gif") }}" alt="Проголосовать" width="114" height="21" border="0"><br>{% endif %}</td>
        <td width="50%" align="right">{#<a href="">Результаты</a>#}</td>
    </tr>
</table>
</form>
<br>
<table width="100%" cellspacing="0" cellpadding="0" border="0">
    <tr>
        <td><img src="{{ asset("bundles/rithisbecrussia/pict/1x1.gif") }}" alt="" border="0" width="5" height="10"><br></td>
        <td class="all" width="100%"></td>
        <td><a href="{{ path("rithis_becrussia_poll_all") }}"><img src="{{ asset("bundles/rithisbecrussia/pict/votes_all.gif") }}" alt="Архив опросов" border="0"></a><br></td>
    </tr>
</table>
<br><br>
{% endif %}
