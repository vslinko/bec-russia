<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>

    <title>Британский Образовательный Центр</title>

    {% stylesheets
    "https://raw.github.com/necolas/normalize.css/v2.0.1/normalize.css" -%}
    <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}
    {%- stylesheets filter="compass"
    "@RithisBECRussiaBundle/Resources/public/scss/scaffolding.scss"
    "@RithisBECRussiaBundle/Resources/public/scss/grid.scss"
    "@RithisBECRussiaBundle/Resources/public/scss/logo.scss"
    "@RithisBECRussiaBundle/Resources/public/scss/phones.scss"
    "@RithisBECRussiaBundle/Resources/public/scss/education-course-types.scss"
    "@RithisBECRussiaBundle/Resources/public/scss/nav.scss"
    "@RithisBECRussiaBundle/Resources/public/scss/article.scss"
    "@RithisBECRussiaBundle/Resources/public/scss/news.scss"
    "@RithisBECRussiaBundle/Resources/public/scss/button.scss"
    "@RithisBECRussiaBundle/Resources/public/scss/news-item.scss"
    "@RithisBECRussiaBundle/Resources/public/scss/map.scss"
    "@RithisBECRussiaBundle/Resources/public/scss/education-courses.scss"
    "@RithisBECRussiaBundle/Resources/public/scss/poll.scss"
    "@RithisBECRussiaBundle/Resources/public/scss/symfony-form.scss"
    "@RithisBECRussiaBundle/Resources/public/scss/banner.scss"
    "@RithisBECRussiaBundle/Resources/public/scss/library.scss"
    "@RithisBECRussiaBundle/Resources/public/scss/gallery.scss"
    "@RithisBECRussiaBundle/Resources/public/scss/reveal.scss"
    "@RithisBECRussiaBundle/Resources/public/scss/schedule.scss"-%}
    <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}

    {% block js %}
    {% endblock %}
</head>
<body>

<header>
    <figure class="logo">
        <a href="{{ path("rithis_becrussia_index_get") }}"><img src="/bundles/rithisbecrussia/images/logo.gif"
                                                                alt="Британский Образовательный Центр"></a>
        <figcaption>
            Курсы английского языка<br>
            Железнодорожный, Новосибирск, Якутск
        </figcaption>
    </figure>
    {% render "RithisBECRussiaBundle:Town:townSelectBlock" %}
    {% render "RithisBECRussiaBundle:Town:townPhonesBlock" %}
</header>

{% block education_course_types %}
    {% render "RithisBECRussiaBundle:EducationCourseType:educationCourseTypesInlineBlock" %}
{% endblock %}

<aside class="left">
    {% include "RithisBECRussiaBundle::nav.html.twig" %}
    {% block last_poll %}
        {% render "RithisBECRussiaBundle:Poll:lastPollBlock" %}
    {% endblock %}
</aside>

<section class="content">
    {% block content "" %}
</section>

<aside class="right">
    {% spaceless %}
    <a href="{{ path("rithis_becrussia_educationcourse_search") }}" class="banner">
        <img src="/bundles/rithisbecrussia/images/educaton-sourse-search.jpg" alt="">
    </a>
    {% endspaceless %}
    {% render "RithisBECRussiaBundle:News:schoolsNewsBlock" %}
</aside>

<footer>
    {% include "RithisBECRussiaBundle::nav.html.twig" %}
    <div class="logo">
        Курсы английского языка<br>
        Железнодорожный, Новосибирск, Якутск
    </div>
    {% render "RithisBECRussiaBundle:Town:townSelectBlock" %}
    {% render "RithisBECRussiaBundle:Town:townPhonesBlock" %}
</footer>

<script type="text/javascript" src="http://api-maps.yandex.ru/2.0-stable/?load=package.standard&lang=ru-RU"></script>
{% javascripts
"https://raw.github.com/Modernizr/Modernizr/v2.6.2/modernizr.js"
"http://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"
"@RithisBECRussiaBundle/Resources/public/js/education-course-types.js"
"@RithisBECRussiaBundle/Resources/public/js/map.js"
"https://raw.github.com/zurb/foundation/v3.2.2/vendor/assets/javascripts/foundation/jquery.foundation.reveal.js"
"@RithisBECRussiaBundle/Resources/assets/js/gallery.js"
"bundles/rithisbecrussia/js/galleria/galleria-1.2.8.min.js"
%}
<script src="{{ asset_url }}"></script>
{% endjavascripts %}

</body>
</html>
