{% extends "RithisBECRussiaBundle::base.html.twig" %}


{% block content %}
    <section class="article list">
        <header>
            <h1>Библиотека</h1>
        </header>

        {% for category in categories %}
            {% if category.books|length > 0 %}
            <article class="book-category">
            <a href="{{ path("rithis_becrussia_library_category", {slug: category.slug}) }}"><h3>{{ category.name }}</h3></a>
            <blockquote>{{ category.description }}</blockquote>
            </article>
            {% endif %}
        {% endfor %}

    </section>
{% endblock %}
