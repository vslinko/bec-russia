{% extends "RithisBECRussiaBundle::base.html.twig" %}

{% block content %}
    <div class="title">Онлайн-тестирование<br><img src="{{ asset("bundles/rithisbecrussia/pict/1x1.gif") }}" alt="" border="0" width="10" height="10"><br></div><br>

    <form action="{{ path("rithis_becrussia_test_postanswers") }}" method="post">
        {% for question in questions %}
            <div class="title">{{ question.question }}<br><img src="{{ asset("bundles/rithisbecrussia/pict/1x1.gif") }}" alt="" border="0" width="10" height="10"></div>

            {% for answer in question.answers %}
                <p>
                    <label>
                        <input type="radio" name="answers[{{ question.id }}]" value="{{ answer.points }}">
                        {{ answer.answer }}
                    </label>
                </p>
            {% endfor %}
        {% endfor %}

        <p><button type="submit">Ответить</button></p>
    </form>
{% endblock %}
